@model CEAE.Models.DTO.Question

@{
    ViewBag.Title = Translations.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@Translations.Delete</h2>
    <h3>@Translations.AreYouSureYouWantToDeleteThis</h3>
    <div>
        <h4>@Translations.Question</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="btn-group">
                @Html.ActionLink(Translations.BackToList, "Index", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-danger">@Translations.Delete</button>
            </div>
        }
    </div>
</div>