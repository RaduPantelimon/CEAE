@model CEAE.Models.DTO.Question

@{
    ViewBag.Title = Translations.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@Translations.Delete</h2>
    <h3>@Translations.AreYouSureYouWantToDeleteThis</h3>
    <h4>@Translations.Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="@Model.ImageUrl" alt="Image" class="img-thumbnail" />
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="btn-group">
            @Html.ActionLink(Translations.No, "Index", null, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-danger">@Translations.Yes</button>
        </div>
    }
</div>
